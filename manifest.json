{
  "manifest_version": 3,
  "name": "Be Visible",
  "version": "1.0",
  "description": "Suggest engaging comments and DMs with AI for LinkedIn, X (Twitter), and more.",
  "permissions": ["scripting", "activeTab", "storage"],
  "host_permissions": [
    "https://www.linkedin.com/*",
    "https://twitter.com/*",
    "https://x.com/*",
    "https://farcaster.xyz/*",
    "https://warpcast.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "options_ui": {
    "page": "settings.html",
    "open_in_tab": true
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.linkedin.com/*",
        "https://twitter.com/*",
        "https://x.com/*",
        "https://farcaster.xyz/*",
        "https://warpcast.com/*"
      ],
      "js": [
        "platforms/basePlatform.js",
        "platforms/linkedin.js",
        "platforms/x.js",
        "platforms/farcaster.js",
        "platformManager.js",
        "cssManager.js",
        "modalManager.js",
        "aiService.js",
        "contentScript.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["modal.html"],
      "matches": [
        "https://www.linkedin.com/*",
        "https://twitter.com/*",
        "https://x.com/*",
        "https://farcaster.xyz/*",
        "https://warpcast.com/*"
      ]
    }
  ],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; style-src 'self' 'unsafe-inline'"
  }
}
